!!!
%html
  %head
    %title VIVOTEK DQA DEVELOPER
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    / Description, Keywords and Author
    %meta{content: "Your description", name: "description"}/
    %meta{content: "Your,Keywords", name: "keywords"}/
    %meta{content: "ResponsiveWebInc", name: "author"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    / Styles
    / Bootstrap CSS
    %link{href:  asset_path("css/bootstrap.min.css"), rel: "stylesheet"}/
    / Slider Revolution CSS
    %link{href:  asset_path("css/rs-settings.css"), rel: "stylesheet"}/
    /[if IE 8]
      <link rel="stylesheet" href="css/rs-settings-ie8.css">
    / Animate CSS
    %link{href:  asset_path("css/animate.min.css"), rel: "stylesheet"}/
    / Portfolio CSS
    %link{href:  asset_path("css/prettyPhoto.css"), rel: "stylesheet"}/
    / Font awesome CSS
    %link{href:  asset_path("css/font-awesome.min.css"), rel: "stylesheet"}/
    / Custom CSS
    %link{href:  asset_path("css/style.css"), rel: "stylesheet"}/
    / Favicon
    %link{href:  asset_path("#"), rel: "shortcut icon"}/
    = csrf_meta_tags
  %body
    / = render 'layouts/revolution_bar'
    / = render 'layouts/service'
    / = render 'layouts/about_us'
    / = render 'layouts/projects'
    = yield
  / jQuery
  %script{src:  asset_path("js/jquery.js")}
  / Bootstrap JS
  %script{src:  asset_path("js/bootstrap.min.js")}
  / jQuery REVOLUTION Slider
  %script{src:  asset_path("js/jquery.themepunch.plugins.min.js"), type: "text/javascript"}
  %script{src:  asset_path("js/jquery.themepunch.revolution.min.js"), type: "text/javascript"}
  / Portfolio JS
  / Pretty Photo JS
  %script{src:  asset_path("js/jquery.prettyPhoto.js"), type: "text/javascript"}
  / jQuery way points
  %script{src:  asset_path("js/waypoints.min.js")}
  / Arbitrary Anchor JS
  %script{src:  asset_path("js/jquery.arbitrary-anchor.js"), type: "text/javascript"}
  / JS Knob
  %script{src:  asset_path("js/jquery.knob.js"), type: "text/javascript"}
  / Gmaps JS
  %script{src:  asset_path("http://maps.google.com/maps/api/js?sensor=true"), type: "text/javascript"}
  %script{src:  asset_path("js/gmaps.js"), type: "text/javascript"}
  / Respond JS for IE8
  %script{src:  asset_path("js/respond.min.js")}
  / HTML5 Support for IE
  %script{src:  asset_path("js/html5shiv.js")}
  / Custom JS
  %script{src:  asset_path("js/custom.js")}

